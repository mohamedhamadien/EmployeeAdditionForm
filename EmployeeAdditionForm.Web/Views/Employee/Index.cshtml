                </th>
                <th>
                    <span asp-for="Model[0].Note"></span>
                </th>
                <th class="text-center">Actions</th> *@
            
                <th>
                        @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Role.Name)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.IsFirsetAppoinment)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Note)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span>@item.Name</span>
                    </td>
                    <td>
                        <span>@item.Role.Name</span>
                    </td>
                    <td>
                        <span>@item.Gender</span>
                    </td>
                    <td>
                        <input type="checkbox" disabled="disabled" @(item.IsFirsetAppoinment ? "checked" : "") />
                    </td>
                    <td>
                        <span>@item.StartDate.ToString("yyyy-MM-dd")</span>
                    </td>
                    <td>
                        <span>@item.Note</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
